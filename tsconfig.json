{
  "compilerOptions": {
    "jsx": "preserve",
    "jsxFactory": "fluid-dom.createElement",
    "baseUrl": ".",
    "target": "Es5",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["src/*"],
      "fluid-dom": ["<rootDir>/packages/fluid-dom/index.ts"],
      "fluid-types": ["<rootDir>/packages/fluid/types.d.ts"]
    }
  },
  "include": ["packages/**/*", "src/**/*"]
}
