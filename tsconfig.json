{
  "compilerOptions": {
    "jsx": "preserve",
    "jsxFactory": "createElement",
    "baseUrl": ".",
    "target": "Es5",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    // "declaration": true,
    // "emitDeclarationOnly": false,
    "outDir": "./build",
    "paths": {
      "*": ["packages/*"],
      "fluid-dom": ["./packages/fluid-dom/index.ts"],
      "fluid-types": ["./packages/fluid/types.d.ts"]
    }
  },
  "include": ["packages/**/*"]
}
